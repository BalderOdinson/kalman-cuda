{
    "docker.commands.run": "docker run --rm --gpus all --privileged -v /dev:/dev -it ${exposedPorts} ${tag}",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "bazel.buildifierFixOnFormat": true,
    "bazel.enableCodeLens": true,
    "bazel.commandLine.commandArgs": [
        "--keep_going"
    ],
    "files.associations": {
        "bitset": "cpp",
        "array": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "cstdio": "cpp"
    },
    "cSpell.words": [
        "BAZEL",
        "cuda",
        "depset",
        "elif",
        "fastbuild",
        "filegroup",
        "nvcc",
        "objs",
        "preprocess",
        "srcs",
        "toolchain",
        "toolchains"
    ],
}
